
@{
    ViewBag.Title = "NewProduct";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<html>
<head>

</head>
<body>
    <section class="content-header">
        <h1></h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@Html.ActionLink("View Product", "ViewProduct")</li>
        </ol>
    </section>
    <br />
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body" ng-app="myApp">
                        <div class="box box-warning" ng-controller="myCtrl">
                            <form name="submitform" novalidate >
                                <div class="box-header with-border">
                                    <h3 class="box-title">New Product</h3>
                                    <input type="submit" value="Save" class="btn btn-success pull-right" ng-click="InsertProd()"  
                                           ng-disabled = "submitform.ProdName.$dirty && submitform.ProdName.$invalid" />

                                </div>
                                <div class="box-body">

                                    <div class="row">
                                        <div class="col-sm-6 col-lg-4">
                                            <div class="form-group">
                                                <label class="col-md-6 control-label">Product Name</label>
                                                <div class="col-md-8">
                                                    <input type="text"  name="ProdName" class="form-control" id="ProdName" placeholder="Name" ng-model="ProdName">
                                                    <span style="color:red" ng-show="submitform.ProdName.$dirty && submitform.ProdName.$invalid">
                                                        <span ng-show="submitform.ProdName.$error.required">Product Name is required.</span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-lg-4">
                                            <div class="form-group">
                                                <label class="col-md-6 control-label">Description</label>
                                                <div class="col-md-8">
                                                    <input type="text" class="form-control" id="inputPDescription" placeholder="Description" ng-model="ProdDescription">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-lg-4">
                                            <div class="form-group">
                                                <label class="col-md-6 control-label">Status</label>
                                                <div class="col-md-8">
                                                    <input type="text" class="form-control" id="inputPStatus" placeholder="Status" ng-model="ProdStatus" maxlength="1">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </form>
</div>
                            </div>
                        </div>
                    </div>
                </div>
</section>
    <script src="~/scripts/angular.js"></script>
    <script src="~/scripts/AngularCode/ProductData.js"></script>
</body>
</html>

