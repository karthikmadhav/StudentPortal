@model IEnumerable<CRM.BusinessLayer.BusinessModels.IndustryCategory>

@{
    ViewBag.Title = "Industry Category";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div>
    <section class="content-header">
        <h1></h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@Html.ActionLink("Create New", "NewIndustryCategory")</li>
        </ol>
    </section>
</div>
<br />
  <section class="content">
      <div class="row">
          <div class="col-xs-12">
              <div class="box box-success">
                  <div class="box-header">
                      <h3 class="box-title">Industry Category</h3>
                      @Html.ActionLink("Create New", "NewIndustryCategory", "MasterSettings", null, new { @class = "btn btn-primary pull-right" })
                  </div>
                  <div class="overlay" id="load">
                      <i class="fa fa-refresh fa-spin"></i>
                  </div>
                  <div class="box-body" id="contents">
                    
                      <table class="table table-bordered table-hover col-xs-9">
                          <tr>
                              <th>
                                  @Html.DisplayNameFor(model => model.IndustryCategoryName)
                              </th>
                              <th>
                                  @Html.DisplayNameFor(model => model.Status)
                              </th>
                              <th class="col-md-3">@Html.DisplayName("Action")</th>
                          </tr>

                          @foreach (var item in Model)
                          {
                              <tr>
                                  <td>
                                      @Html.DisplayFor(modelItem => item.IndustryCategoryName)
                                  </td>
                                  <td>
                                      @Html.DisplayFor(modelItem => item.Status)
                                  </td>
                                  <td>
                                     
                                       @Html.ActionLink(" ", "EditIndustry", new { id = item.IndustryCategoryId },new { @class = "fa fa-pencil" }) |
                                      @Html.ActionLink(" ", "DeleteIndustry", new { id = item.IndustryCategoryId }, new { @class = "fa fa-trash-o" })

                                      @*@Html.ActioxnLink(" ", "DeleteIndustry", new { id = item.IndustryCategoryId },new { @class = "fa fa-trash-o", data_toggle = "modal", data_target = "#modal-default", data_whatever = "@item.IndustryCategoryId", onclick = "deleteConfirmation();" })*@
                                  </td>
                              </tr>
                          }

                      </table>

                      </div>

                  </div>

              </div>
          </div>


      <div class="modal fade test" id="modal-default">
          <div class="modal-dialog">
              <div class="modal-content">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                      </button>
                      <h4 class="modal-title">Default Modal</h4>
                  </div>
                  <div class="modal-body">
                      <p>One fine body&hellip;</p>
                  </div>
                  <div class="modal-footer">
                      <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary">Save changes</button>
                  </div>
              </div>
              <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
      </div>
</section>


<script type="text/javascript">
    function deleteConfirmation()
    {
       
    }
    $(document).ready(function () {
      
    $(".btn").click(function(){
        $("#myModal").modal('show');
    });
});
</script>
