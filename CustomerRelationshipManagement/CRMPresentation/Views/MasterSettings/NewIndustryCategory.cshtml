@model CRM.BusinessLayer.BusinessModels.IndustryCategory

@{
    ViewBag.Title = "New Industry Category";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <html>
    <head>

    </head>
    <body>
        <section class="content-header">
            <h1></h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">@Html.ActionLink("View Industry Category", "ViewIndustryCategory")</li>
            </ol>
        </section>
        <br />
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                        </div>
                        <div class="box-body">
                            <div class="box box-warning">
                                <div class="box-header with-border">
                                    <h3 class="box-title">New Industry Category</h3>
                                    <input type="submit" value="Save" class="btn btn-success pull-right" />


                                </div>

                                <div class="box-body">
                                    <form role="form">
                                        <div class="overlay">
                                            <i class="fa fa-refresh fa-spin"></i>
                                        </div>
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label for="IndustryCategory">Industry Category</label>
                                                @Html.EditorFor(model => model.IndustryCategoryName, new { htmlAttributes = new { @class = "form-control" } })


                                            </div>
                                        </div>

                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label for="Status">Status</label>
                                                @Html.DropDownListFor(model => model.Status, new SelectList(
                  new List<Object> { new { value = 0, text = "SELECT" }, new { value = 'Y', text = "Yes" }, new { value = 'N', text = "No" } }, "value", "text", 2), htmlAttributes: new { @class = "form-control select2" })




                                            </div>
                                        </div>




                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </section>
    </body>

</html>
}


